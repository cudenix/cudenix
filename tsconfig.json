{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"disableSizeLimit": true,
		"exactOptionalPropertyTypes": true,
		"inlineSourceMap": false,
		"isolatedModules": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"noEmit": false,
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"types": ["bun"],
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*.ts*"],
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
